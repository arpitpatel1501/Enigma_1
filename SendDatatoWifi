#include <SoftwareSerial.h>
#include <SPI.h>
#include <MFRC522.h>

SoftwareSerial Inter(3,2);


#define SS_PIN 10
#define RST_PIN 9
MFRC522 mfrc522(SS_PIN, RST_PIN);   // Create MFRC522 instance.


#define data A0  //analog
//#define moist_in A1  //analog
//#define dht11_in A2  //analog
//#define pir_in 4 //digital
int ldr_out, moist_out, pir_out,humi,temp;
String data_of_all_sensors;

int count1, count2, count3, count4;

int student1 = 8;
int student2 = 16;
int student3 = 24;
int student4 = 32;

void setup(){

  //pinMode(pir_in,INPUT);
  Serial.begin(9600);
  Inter.begin(4800);
  pinMode(3,INPUT);
  pinMode(2,OUTPUT);
  SPI.begin();      // Initiate  SPI bus
  mfrc522.PCD_Init();   // Initiate MFRC522
  
  delay(500);//Delay to let system boot
}//end "setup()"
 
void loop(){
  //Start of Program 
    //LDR Reading

  int count;
  if ( ! mfrc522.PICC_IsNewCardPresent()) 
  {
    return;
  }
  // Select one of the cards
  if ( ! mfrc522.PICC_ReadCardSerial()) 
  {
    return;
  }

   Serial.print("UID tag :");
  String content= "";
  for (byte i = 0; i < mfrc522.uid.size; i++) 
  {
     Serial.print(mfrc522.uid.uidByte[i] < 0x10 ? " 0" : " ");
     Serial.print(mfrc522.uid.uidByte[i], HEX);
     content.concat(String(mfrc522.uid.uidByte[i] < 0x10 ? " 0" : " "));
     content.concat(String(mfrc522.uid.uidByte[i], HEX));
  }

  content.toUpperCase();
  
  if (content.substring(1) == "C6 A8 9B 77") //change here the UID of the card/cards that you want to give access
  {
      if(count1 == 0) {
        student1 = student1+1;
        count1= count1+1;
        Inter.println(String(student1));
        delay(1000);
      }
      else{
        student1 = student1-1;
        count1= count1-1;
        Inter.println(String(student1));
        delay(1000);
      }
        
        if(student1 == 9)
          Serial.print("student1 entering in Classroom: ");
        else
           Serial.print("student1 Exiting Classroom: ");
        //Serial.println(student1[0]);
        delay(5000);
  }
  else if (content.substring(1) == "1D 0A 73 8F") //change here the UID of the card/cards that you want to give access
  {
      if(count2 == 0) {
        student2 = student2+1;
        count2= count2+1;
        Inter.println(String(student2));
        delay(1000);
      }
      else{
        student2 = student2-1;
        count2= count2-1;
        Inter.println(String(student2));
        delay(1000);
      }
        if(student2 == 17)
          Serial.print("student2 entering in Classroom: ");
        else
           Serial.print("student2 Exiting Classroom: ");
        //Serial.println(student2[0]);
        delay(5000);
  }
  else if (content.substring(1) == "7A EA CA FC") //change here the UID of the card/cards that you want to give access
  {
      if(count3 == 0) {
        student3 = student3+1;
        count3= count3+1;
        Inter.println(String(student3));
        delay(1000);
      }
      else{
        student3 = student3-1;
        count3= count3-1;
        Inter.println(String(student3));
        delay(1000);
      }
        if(student3 == 25)
          Serial.print("student3 entering in Classroom: ");
        else
           Serial.print("student3 Exiting Classroom: ");
        //Serial.println(student3[0]);
        delay(5000);
  }
  else if (content.substring(1) == "C6 DF 9D 77") //change here the UID of the card/cards that you want to give access
  {
      if(count4 == 0) {
        student4 = student4+1;
        count4= count4+1;
        Inter.println(String(student4));
        delay(1000);
      }
      else{
        student4 = student4-1;
        count4= count4-1;
        Inter.println(String(student4));
        delay(1000);
      }
        if(student4 == 33)
          Serial.print("student4 entering in Classroom: ");
        else
           Serial.print("student4 Exiting Classroom: ");
           
        //Serial.println(student4[0]);
        delay(5000);
  }
 
 else   {
    Serial.println(" Access denied");
    
    delay(5000);
  }
  
  
  
}// end loop() 

